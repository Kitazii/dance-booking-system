<html lang="en">
  {{> partials/head}}
  <body>
    <!-- PAGE LOADING ================================================== -->
    <div id="preloader"></div>

    <!-- MAIN WRAPPER ================================================== -->
    <div class="main-wrapper">
      <!-- NAVIGATION ================================================== -->
      {{> partials/nav}}

      <!-- ATTEND PAGE ================================================== -->
      <section class="page-title-section bg-img cover-background theme-overlay-dark-blue left-overlay-dark top-position" data-overlay-dark="6">
            <div class="container">
                <div class="row text-center align-items-center justify-content-center">
                    <div class="col-md-12">
                        <h1 class="text-white mb-1-6">Attend {{currentClass.title}} class</h1>
                        <ul>
                            <li><a href="/">Home</a></li>
                            <li>Attend {{currentClass.title}} class</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <!-- Error Popup Section -->
        {{> errors/error}}

      <!-- CLASS DETAILS AND BOOKING FORM ================================================== -->
      <section class="bg-light">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-11">
              <!-- Class Details -->
              <div class="class-details mb-4">
                <h4 class="mb-3">{{currentClass.title}}</h4>
                <div class="d-flex border-bottom pb-3 mb-3">
                  <p class="me-3">
                    <i class="ti-time text-primary me-2"></i>{{currentClass.time}},
                    <i class="ti-calendar text-primary me-2"></i>{{currentClass.date}}
                  </p>
                  <p class="mb-0">
                    <i class="ti-location-pin text-primary me-2"></i>{{currentClass.location}}
                  </p>
                </div>
                <p>{{currentClass.summary}}</p>
                <ul class="list-unstyled">
                  <li><strong>Price:</strong> Â£{{currentClass.price}}</li>
                </ul>
              </div>

              <!-- Booking Form -->
              <div class="booking-form p-4 p-md-5 bg-white shadow-sm border-radius-5">
                <h5 class="mb-4">Confirm Your Booking</h5>
                <form method="post" action="/courses/attended" role="form">
                  <!-- Hidden Fields for Class/Course Identifiers -->
                  <input type="hidden" id ="classId" name="classId" value="{{currentClass.classId}}">
                  <input type="hidden" id ="courseId" name="courseId" value="{{courses.id}}">

                  {{^user}}
                    <div class="form-group mb-3">
                      <label for="email" class="mb-1">Email</label>
                      <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                    </div>
                  {{/user}}

                  {{#user}}
                    <div class="form-group mb-3">
                      <label for="email" class="mb-1">Email</label>
                      <input type="email" class="form-control" id="email" name="email" value="{{user.email}}" readonly>
                    </div>
                  {{/user}}

                  <!-- Additional Optional Information -->
                  <div class="form-group mb-4">
                    <label for="comments" class="mb-1">Comments / Additional Info (COMING SOON)</label>
                    <textarea name="comments" id="comments" class="form-control" rows="3" placeholder="Any additional information (optional)" disabled></textarea>
                  </div>

                  <!-- Confirm Booking Button -->
                  <button 
                  type="submit" 
                  class="btn-style1 primary small wow fadeIn w-100"
                  data-wow-delay="100ms"
                  >Confirm Booking</button>
                </form>
              </div>

            </div>
          </div>
        </div>
      </section>

      <!-- FOOTER ================================================== -->
      {{> partials/footer}}

      <!-- Cursor Helper (if applicable) -->
      <div class="cursor-helper">
        <div class="cursor-helper-outer"></div>
        <div class="cursor-helper-inner"></div>
      </div>
    </div>

    <!-- Start Scroll to Top -->
    <a href="#!" class="scroll-to-top"><i class="fas fa-angle-up" aria-hidden="true"></i></a>
    <!-- All JS Include -->
    {{> partials/tail}}
  </body>
</html>