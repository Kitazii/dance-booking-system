<html lang="en">
{{> partials/head}}
<body>
    <!-- PAGE LOADING
    ================================================== -->
    <div id="preloader"></div>
    <!-- MAIN WRAPPER
    ================================================== -->
    <div class="main-wrapper">
     <!-- NAVIGATION
        ================================================== -->
        {{> partials/nav}} 

        <!-- ENROLL FORM
        ================================================== -->
        <section class="page-title-section bg-img cover-background theme-overlay-dark-blue left-overlay-dark top-position" data-overlay-dark="6">
            <div class="container">
                <div class="row text-center align-items-center justify-content-center">
                    <div class="col-md-12">
                        <h1 class="text-white mb-1-6">Enrol in {{courses.name}} course</h1>
                        <ul>
                            <li><a href="/">Home</a></li>
                            <li>Enrol in {{courses.name}} course</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        {{#error}}
            <div class="alert alert-danger">
                {{error}}
            </div>
        {{/error}}
        
        <section class="account-section-text-align">
            <div id="formContent" class="account-div-styling booking-form p-4 p-md-5 bg-white shadow-sm border-radius-5">
                <h5 class="mb-4">Confirm Your Enrollment</h5>
                <!-- Enroll Form -->
                <form method="post" role ="form" action="/courses/enrolled">
                <input type="hidden" id="courseId" name="courseId" value="{{courses.id}}">

                {{^user}}
                 <div class="form-group">
                        <label for="forename" class="col-formlabel">Forename</label>
                        <div class="col-sm-10 input-group">
                            <input type="text" class="form-control" id="forename" name="forename" placeholder="Forename" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="surname" class="col-formlabel">Surname</label>
                        <div class="col-sm-10 input-group">
                            <input type="text" class="form-control" id="surname" name="surname" placeholder="Surname" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="col-formlabel">Email</label>
                        <div class="col-sm-10 input-group">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                        </div>
                    </div>

                    <button 
                        type="submit"
                        class="btn-style1 primary small wow fadeIn w-100"
                        data-wow-delay="100ms"
                    >
                        ENROL
                    </button>
                {{/user}}
                {{#user}}
                    <div class="form-group">
                        <label for="forename" class="col-formlabel">Forename</label>
                        <div class="col-sm-10 input-group">
                            <input type="text" class="form-control" id="forename" name="forename" value={{user.forename}} placeholder="Forename" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="surname" class="col-formlabel">Surname</label>
                        <div class="col-sm-10 input-group">
                            <input type="text" class="form-control" id="surname" name="surname" value={{user.surname}} placeholder="Surname" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="col-formlabel">Email</label>
                        <div class="col-sm-10 input-group">
                            <input type="email" class="form-control" id="email" name="email" value={{user.email}} placeholder="Email" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="username" class="col-formlabel">Username</label>
                        <div class="col-sm-10 input-group">
                            <input type="text" class="form-control" id="username" name="username" value={{user.username}} disabled>
                        </div>
                    </div>

                    <button 
                        type="submit"
                        class="btn-style1 primary small wow fadeIn"
                        data-wow-delay="100ms"
                    >
                        ENROL
                    </button>
                    {{/user}}
                </form>
            </div>
         </section>
        <div>
        <!-- FOOTER
            ================================================== -->
            {{> partials/footer}}
        </div>
    </div>

    <!-- start scroll to top -->
    <a href="#!" class="scroll-to-top"><i class="fas fa-angle-up" aria-hidden="true"></i></a>
    <!-- end scroll to top -->

    <!-- all js include start -->

   {{> partials/tail}}

    <!-- all js include end -->
</body>
</html>