<html lang="en">
{{> partials/head}}
<body>
    <!-- PAGE LOADING
    ================================================== -->
    <div id="preloader"></div>
    <!-- MAIN WRAPPER
    ================================================== -->
    <div class="main-wrapper">
     <!-- NAVIGATION
        ================================================== -->
        {{> partials/nav}} 

        <!-- NEWUSER PAGE
        ================================================== -->
        <section class="theme-overlay-dark-blue left-overlay-dark form-top-position" data-overlay-dark="6"></section>
        <section class="account-section-text-align">
            <div id="formContent" class="booking-form p-4 p-md-5 bg-white shadow-sm border-radius-5">
                <div class="container">
                    <h1 class="mb-4">Add New User</h1>
                    <form method="post" action="/adminDashboard/newUser/add">
                        <div class="form-group mb-3">
                            <label for="forename">Forename:</label>
                            <input type="text" class="form-control" id="forename" name="forename" placeholder="Enter forename" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="surname">Surname:</label>
                            <input type="text" class="form-control" id="surname" name="surname" placeholder="Enter surname" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="username">Username:</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Enter username" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="role">Role:</label>
                            <input type="text" class="form-control" id="role" name="role" placeholder="Enter role" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="password">Password (8 characters minimum):</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" minlength="8" required>
                        </div>
                        <button type="submit" class="btn-style1 primary small wow fadeIn w-100">Submit User</button>
                    </form>
                </div>
            </div>
         </section>
        <div>
        <!-- FOOTER
            ================================================== -->
            {{> partials/footer}}
        </div>
    </div>

    <!-- start scroll to top -->
    <a href="#!" class="scroll-to-top"><i class="fas fa-angle-up" aria-hidden="true"></i></a>
    <!-- end scroll to top -->

    <!-- all js include start -->

   {{> partials/tail}}

    <!-- all js include end -->
</body>
</html>