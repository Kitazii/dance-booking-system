<html lang="en">
{{> partials/head}}
<body>
    <!-- PAGE LOADING
    ================================================== -->
    <div id="preloader"></div>
    <!-- MAIN WRAPPER
    ================================================== -->
    <div class="main-wrapper">
     <!-- NAVIGATION
        ================================================== -->
        {{> partials/nav}} 

        <!-- NEW COURSE FORM
        ================================================== -->
        <section class="theme-overlay-dark-blue left-overlay-dark form-top-position" data-overlay-dark="6"></section>
        <section class="account-section-text-align">
            <div id="formContent" class="booking-form p-4 p-md-5 bg-white shadow-sm border-radius-5">
                <div class="container">
                    <h1 class="mb-4">Add New Course</h1>
                    <form method="post" action="/adminDashboard/newCourse/add">
                        <div class="form-group mb-3">
                            <label for="name">Course Name:</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Enter course name" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="description">Course Description:</label>
                            <textarea class="form-control" id="description" name="description" rows="3" placeholder="Enter a brief description" required></textarea>
                        </div>
                        <div class="form-group mb-3">
                            <label for="intro">Course Intro:</label>
                            <textarea class="form-control" id="intro" name="intro" rows="5" placeholder="Enter the course introduction" required></textarea>
                        </div>
                        <div class="form-group mb-3">
                            <label for="category">Category:</label>
                            <input type="text" class="form-control" id="category" name="category" placeholder="Enter course category" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="courseLead">Course Lead:</label>
                            <input type="text" class="form-control" id="courseLead" name="courseLead" placeholder="Enter course lead" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="duration">Duration:</label>
                            <input type="text" class="form-control" id="duration" name="duration" placeholder="e.g., 9 Months" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="difficulty">Difficulty:</label>
                            <input type="text" class="form-control" id="difficulty" name="difficulty" placeholder="Enter difficulty level" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="sessions">Sessions:</label>
                            <input type="text" class="form-control" id="sessions" name="sessions" placeholder="e.g., 12 Sessions/Weekly" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="type">Course Type:</label>
                            <input type="text" class="form-control" id="type" name="type" placeholder="Enter course type" required>
                        </div>
                        <div class="form-group mb-4">
                            <label for="teachers">Number of Teachers:</label>
                            <input type="number" class="form-control" id="teachers" name="teachers" placeholder="Enter the number of teachers" required>
                        </div>
                        <button type="submit" class="btn-style1 primary small wow fadeIn w-100">Submit Course</button>
                    </form>
                </div>
            </div>
         </section>
        <div>
        <!-- FOOTER
            ================================================== -->
            {{> partials/footer}}
        </div>
    </div>

    <!-- start scroll to top -->
    <a href="#!" class="scroll-to-top"><i class="fas fa-angle-up" aria-hidden="true"></i></a>
    <!-- end scroll to top -->

    <!-- all js include start -->

   {{> partials/tail}}

    <!-- all js include end -->
</body>
</html>